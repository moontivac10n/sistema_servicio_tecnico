@{
    ViewData["Title"] = "Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/custom.css" />
</head>
<body>
    <div class="container mt-5 text-center">
        <h1 class="display-4">Bienvenido a nuestro Sistema de Servicio Técnico</h1>
        <p class="lead mt-4">Gestiona tus servicios técnicos de manera eficiente y rápida con nuestra plataforma.</p>
        <div class="mt-5">
            <a href="@Url.Action("Index", "Usuarios")" class="btn btn-primary btn-lg mx-2">Gestionar Usuarios</a>
            <a href="@Url.Action("Index", "Clientes")" class="btn btn-secondary btn-lg mx-2">Gestionar Clientes</a>
            <a href="@Url.Action("Index", "Servicios")" class="btn btn-success btn-lg mx-2">Ver Servicios</a>
            <a href="@Url.Action("Index", "Descripcion")" class="btn btn-info btn-lg mx-2">Ver Descripción</a>
            <a href="@Url.Action("Index", "Recepciones")" class="btn btn-warning btn-lg mx-2">Gestionar Recepciones</a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
