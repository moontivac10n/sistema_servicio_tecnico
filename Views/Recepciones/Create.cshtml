@model sistema_servicio_tecnico.Models.RecepcionEquipo

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear nueva Recepcion</h1>

<h4>Recepcion de Equipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Accesorio" class="control-label"></label>
                <input asp-for="Accesorio" class="form-control" />
                <span asp-validation-for="Accesorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadAlmacenamiento" class="control-label"></label>
                <input asp-for="CapacidadAlmacenamiento" class="form-control" />
                <span asp-validation-for="CapacidadAlmacenamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadRam" class="control-label"></label>
                <input asp-for="CapacidadRam" class="form-control" />
                <span asp-validation-for="CapacidadRam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grafico" class="control-label"></label>
                <input asp-for="Grafico" class="form-control" />
                <span asp-validation-for="Grafico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarcaPc" class="control-label"></label>
                <input asp-for="MarcaPc" class="form-control" />
                <span asp-validation-for="MarcaPc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeloPc" class="control-label"></label>
                <input asp-for="ModeloPc" class="form-control" />
                <span asp-validation-for="ModeloPc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nserie" class="control-label"></label>
                <input asp-for="Nserie" class="form-control" />
                <span asp-validation-for="Nserie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicioId" class="control-label"></label>
                <select asp-for="ServicioId" class ="form-control" asp-items="ViewBag.ServicioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoAlmacenamiento" class="control-label"></label>
                <input asp-for="TipoAlmacenamiento" class="form-control" />
                <span asp-validation-for="TipoAlmacenamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoGpu" class="control-label"></label>
                <input asp-for="TipoGpu" class="form-control" />
                <span asp-validation-for="TipoGpu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPc" class="control-label"></label>
                <input asp-for="TipoPc" class="form-control" />
                <span asp-validation-for="TipoPc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
